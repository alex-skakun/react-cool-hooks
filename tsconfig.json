{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Node",
    "importHelpers": true,
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "./tsconfig.spec.json"
    },
    {
      "path": "./tsconfig.tools.json"
    }
  ]
}
